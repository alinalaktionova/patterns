{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6","dom"],
    "module":"es6",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "watch": true,
    "moduleResolution": "node",
    "noEmitOnError": true
  },
  "exclude": ["./node_modules"],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ]
}
